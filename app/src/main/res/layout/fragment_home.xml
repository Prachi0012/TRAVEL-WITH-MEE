<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/idSearchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:elevation="5dp"
                app:iconifiedByDefault="false"
                app:queryHint="Search Here" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:text="Categories "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/catBeach"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_margin="@dimen/_1sdp"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/beachimg" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:gravity="center"
                                android:text="Beach"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/catMountain"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_margin="@dimen/_1sdp"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/mountainimg" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:gravity="center"
                                android:text="Mountain"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/catLake"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_margin="@dimen/_1sdp"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/lakeimg" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="5dp"
                                android:gravity="center"
                                android:text="Lake"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/catCamp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_margin="@dimen/_1sdp"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/campimg" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="5dp"
                                android:layout_marginBottom="@dimen/_2sdp"
                                android:gravity="center"
                                android:text="Camp"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/catCity"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_margin="@dimen/_1sdp"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/cityimg" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="5dp"
                                android:gravity="center"
                                android:text="City"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/catDesert"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_margin="@dimen/_1sdp"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/desertimg" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="5dp"
                                android:gravity="center"
                                android:text="Desert"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_margin="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/background_color"
                        app:cardCornerRadius="@dimen/_10sdp">

                        <LinearLayout
                            android:id="@+id/catForest"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_55sdp"
                                android:layout_margin="@dimen/_1sdp"
                                app:cardCornerRadius="@dimen/_10sdp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_55sdp"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"

                                    android:src="@drawable/forestimg" />

                            </androidx.cardview.widget.CardView>


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="5dp"
                                android:gravity="center"
                                android:text="Forest"
                                android:textColor="@color/black"
                                android:textSize="15dp" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </HorizontalScrollView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Most Visited "
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_12ssp" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/catscrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints" />

                <!--                <ProgressBar-->
                <!--                    android:id="@+id/catprogressbar"-->
                <!--                    android:layout_width="@dimen/_20sdp"-->
                <!--                    android:layout_height="@dimen/_20sdp"-->
                <!--                    app:layout_constraintBottom_toBottomOf="@+id/rcvCategory"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                <!--                    app:layout_constraintStart_toStartOf="parent"-->
                <!--                    app:layout_constraintTop_toTopOf="parent"-->
                <!--                    tools:ignore="MissingConstraints" />-->


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>
    </ScrollView>


</LinearLayout>