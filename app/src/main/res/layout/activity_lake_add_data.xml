<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.AddData.LakeAddDataActivity">

    <EditText
        android:id="@+id/edtlake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Place Name"
        android:maxLines="1"
        android:layout_margin="@dimen/_5sdp"/>
    <EditText
        android:id="@+id/edtLcity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="city"
        android:maxLines="1"
        android:layout_margin="@dimen/_5sdp"/>
    <EditText
        android:id="@+id/edtLdescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="description"
        android:maxLines="1"
        android:layout_margin="@dimen/_5sdp"/>
    <EditText
        android:id="@+id/edtLprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="price"
        android:layout_margin="@dimen/_5sdp"/>
    <EditText
        android:id="@+id/edtLstaypeople"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="people"
        android:maxLines="1"
        android:layout_margin="@dimen/_5sdp"/>

    <Button
        android:id="@+id/btnLaddimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Image"/>

    <Button
        android:id="@+id/btnLsubmit"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"/>
</LinearLayout>